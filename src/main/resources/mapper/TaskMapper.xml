<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.software.mapper.TaskMapper">

    <select id="getAllTasks"  resultType="com.example.software.bean.Task">
        SELECT * FROM task;
    </select>

    <select id="getAllofficial"  resultType="com.example.software.bean.Official">
        SELECT * FROM official;
    </select>

    <delete id="deleteTask" parameterType="com.example.software.bean.Task">
        DELETE FROM task
        WHERE number = #{number}
    </delete>

    <update id="updateTask" parameterType="com.example.software.bean.Task">
        UPDATE task
        SET
            taskName = #{taskName},
            company = #{company},
            inspectionType = #{inspectionType},
            hiddenDangerCount = #{hiddenDangerCount},
            checkcount= #{checkcount},
            inspector = #{inspector},
            inspectorType= #{inspectorType},
            startDate = #{startDate},
            endDate = #{endDate}
            WHERE
            number = #{number}
    </update>
    <insert id="addTask" parameterType="com.example.software.bean.Task">
        INSERT INTO task (number,taskName, company, inspectionType,hiddenDangerCount,checkcount,inspector,inspectorType,startDate,endDate)
        VALUES (#{number},#{taskName}, #{company}, #{inspectionType},#{hiddenDangerCount},#{checkcount},#{inspector},#{inspectorType},#{startDate},#{endDate})
    </insert>

    <insert id="addchildtask" parameterType="java.util.List">
        INSERT INTO childtask (number, inspector, taskName)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.number}, #{item.inspector}, #{item.taskName})
        </foreach>
    </insert>

